{{ header }}
<div id="information-information" class="container containers">
	<ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
			<li>
				<a class="breadcrumb-item" style="" class="breadcrumb-item" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
			</li>
		{% endfor %}
	</ul>
	<div class="row">{{ column_left }}
		{% if column_left and column_right %}
			{% set class = 'col-sm-6' %}
		{% elseif column_left or column_right %}
			{% set class = 'col-sm-9' %}
		{% else %}
			{% set class = 'col-sm-12' %}
		{% endif %}
		<style>
		.col-sm-12 {
			padding-left: 25px;
		}
		</style>
		<div id="content" class="{{ class }}">{{ content_top }}
			<h1>{{ heading_title }}</h1>
			{{ description }}{{ content_bottom }}</div>
		{{ column_right }}</div>
</div>
{{ footer }}
